<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@color/colorPrimary"
            android:gravity="center">

            <TextView
                android:id="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="@color/colorWhite"
                android:textSize="16.0dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_content"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="58.0dip"
            android:background="@drawable/bg_border_top"
            android:orientation="horizontal"
            android:paddingTop="8.0dip">

            <RadioButton
                android:id="@+id/rb_main_home"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@null"
                android:button="@null"
                android:drawableTop="@drawable/selector_main_rb_home"
                android:gravity="center_horizontal"
                android:text="首页"
                android:textAlignment="center"
                android:textColor="@drawable/selector_main_rb_text"
                android:textSize="12.0dip" />

            <RadioButton
                android:id="@+id/rb_main_menu"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@null"
                android:button="@null"
                android:drawableTop="@drawable/selector_main_rb_menu"
                android:gravity="center_horizontal"
                android:text="健康菜谱"
                android:textAlignment="center"
                android:textColor="@drawable/selector_main_rb_text"
                android:textSize="12.0dip" />

            <RadioButton
                android:id="@+id/rb_main_user"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@null"
                android:button="@null"
                android:drawableTop="@drawable/selector_main_rb_user"
                android:gravity="center_horizontal"
                android:text="我的"
                android:textAlignment="center"
                android:textColor="@drawable/selector_main_rb_text"
                android:textSize="12.0dip" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>