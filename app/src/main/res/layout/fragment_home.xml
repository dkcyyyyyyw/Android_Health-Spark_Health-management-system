<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10.0dip"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="120.0dip"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_main" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/btn_border"
                android:orientation="vertical"
                android:padding="10.0dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@id/ll_food_energy"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/btn_border"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10.0dip">

                        <ImageView
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"
                            android:src="@drawable/ic_food_energy" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30.0dip"
                            android:gravity="center"
                            android:lines="2"
                            android:text="食物热量"
                            android:textColor="@color/colorPrimary"
                            android:textSize="28.0dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@id/ll_diet"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/btn_border"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10.0dip">

                        <ImageView
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"
                            android:src="@drawable/ic_diet" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30.0dip"
                            android:gravity="center"
                            android:lines="2"
                            android:text="饮食记录"
                            android:textColor="@color/colorPrimary"
                            android:textSize="28.0dip" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_weight"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/btn_border"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10.0dip">

                        <ImageView
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"
                            android:src="@drawable/ic_weight" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30.0dip"
                            android:gravity="center"
                            android:lines="2"
                            android:text="体重记录"
                            android:textColor="@color/colorPrimary"
                            android:textSize="28.0dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_lose_weight"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/btn_border"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10.0dip">

                        <ImageView
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"
                            android:src="@drawable/ic_health_information" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30.0dip"
                            android:gravity="center"
                            android:lines="2"
                            android:text="健康资讯"
                            android:textColor="@color/colorPrimary"
                            android:textSize="28.0dip" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_health_record"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/btn_border"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10.0dip">

                        <ImageView
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"
                            android:src="@drawable/ic_health_record" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30.0dip"
                            android:gravity="center"
                            android:lines="2"
                            android:text="健康档案"
                            android:textColor="@color/colorPrimary"
                            android:textSize="28.0dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_sport_record"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/btn_border"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10.0dip">

                        <ImageView
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"
                            android:src="@drawable/ic_sport_record" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30.0dip"
                            android:gravity="center"
                            android:lines="2"
                            android:text="运动记录"
                            android:textColor="@color/colorPrimary"
                            android:textSize="28.0dip" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:background="@drawable/bg_border_bottom"
                android:orientation="vertical"
                android:paddingBottom="10.0dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25.0dip"
                        android:layout_height="25.0dip"
                        android:src="@drawable/ic_bmi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="BMI指数"
                        android:textSize="20.0sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10.0dip"
                    android:background="@drawable/btn_border"
                    android:orientation="vertical"
                    android:padding="15.0dip">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_border_bottom"
                        android:orientation="horizontal"
                        android:paddingTop="15.0dip"
                        android:paddingBottom="15.0dip">

                        <TextView
                            android:layout_width="70.0dip"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="身高(CM)"
                            android:textSize="14.0dip" />

                        <EditText
                            android:id="@+id/et_height"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:background="@null"
                            android:hint="请输入身高"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textSize="14.0dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_border_bottom"
                        android:orientation="horizontal"
                        android:paddingTop="15.0dip"
                        android:paddingBottom="15.0dip">

                        <TextView
                            android:layout_width="70.0dip"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="体重(KG)"
                            android:textSize="14.0dip" />

                        <EditText
                            android:id="@+id/et_weight"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:background="@null"
                            android:hint="请输入体重"
                            android:inputType="numberDecimal"
                            android:maxLength="50"
                            android:singleLine="true"
                            android:textSize="14.0dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_border_bottom"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="5.0dip"
                        android:paddingBottom="5.0dip">

                        <TextView
                            android:layout_width="70.0dip"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="性      别"
                            android:textSize="14.0dip" />

                        <RadioGroup
                            android:id="@id/rg_sex"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@id/rb_man"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="男"
                                android:textSize="14.0dip" />

                            <RadioButton
                                android:id="@id/rb_woman"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="女"
                                android:textSize="14.0dip" />
                        </RadioGroup>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_calculate"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20.0dip"
                        android:background="@drawable/btn_border_fill"
                        android:text="计  算"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="22.0dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>